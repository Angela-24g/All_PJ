<meta charset="UTF-8">
<title>list.jsp</title>
<style type="text/css">
	h2{ text-align: center;}
	table{ 
	margin: auto; 
	background-color: ivory;
	
	}
</style>
</head>
<body>
<h2>글 목록(전체글)</h2>
<table width="80%">
	<tr>
		<td align="right">
			<a href="writeForm.do">글쓰기</a>
		</td>
	</tr>
</table>

<c:if test="${count==0}">
	저장된 글이 없습니다.
</c:if>


<!-- 글이 존재하면 -->
<c:if test="${count!=0}">
	<table width="80%">
		<tr>
			<td>글번호</td>
			<td>글제목</td>
			<td>글쓴이</td>
			<td>작성일</td>
			<td>조회수</td>
			<td>IP</td>
		</tr>
	
	<c:forEach var="dto" items="${list}"> <!-- 아이템을 list로 넣어뒀다.  model.attribute("list", list) 한 것! -->
		<tr>
			<td>
				<c:out value="${number}"></c:out> <!-- 글을 보여주고자 한다(그래서 모든 걸 보여주기 위해 for문을 쓴거다!) -->
				<c:set var="number" value="${number-1}"/> <!-- 글을 보여주고자 한다(그래서 모든 걸 보여주기 위해 for문을 쓴거다!) -->
			</td>
			<!-- 글제목 -->
			<td>
				<!-- 답글이면 이미지 넣는 방법: webapps/resources/imgs 폴더 안에 이미지 넣는다.-->
				<c:if test="${dto.re_level>0}">
					<img src="resources/imgs/level.gif" width="${5*dto.re_level}" height="16"> <%-- ${5*dto.re_level}공백을 줄이려고 이렇게 쓴거다. level만큼 들어가게 한다.--%>
					<img src="resources/imgs/re.gif"> 
				</c:if>	
				
				<!-- 원글일 때 -->
				<c:if test="${dto.re_level==0}">
					<img src="resources/imgs/level.gif" width="${5*dto.re_level}" height="16" /> <%-- ${5*dto.re_level}공백을 줄이려고 이렇게 쓴거다. 이거 안쓰고 0을 써줘도 됨--%>
				</c:if>
				
				<!-- 글 제목을 클릭, 글 내용으로 간다. 기본키를 보내야 거기에 해당하는 내용을 가져올 수 있기 때문!  -->
				<a href="content.do?num=${dto.num}&pageNum=${pageNum}">${dto.subject}</a>
				
				<!-- 조회수가 20번 이상이면, hot.gif를 표시 -->
				<c:if test="${dto.readcount>=20}">
					<img src="resources/imgs/hot.gif">
				</c:if>
			</td>
		<!-- 글 제목 - end -->
		<td>${dto.writer}</td>
		<td><fmt:formatDate value="${dto.regdate}" pattern="yyyy-MM-dd hh:mm:ss"/></td><!--  fmt쓰는 이유: 날짜를 format 데이터쓰려고!! -->
		<td>${dto.readcount}</td>
		<td>${dto.ip}</td>
	</c:forEach>	
	
	</table>
</c:if>
<!-- 블럭, 페이지 처리 -->
<table width="80%"> 
	<tr>
		<td align="center">
			<!-- 에러 방지 -->
			<c:if test="${endPage>pageCount}">
				<c:set var = "endPage" value="${pageCount}" />
			</c:if>
			
			<!-- 이전 블럭 가기 -->
			<c:if test="${startPage>10}">
				<a href="list.do>pageNum=${startPage-10}">이전블록</a>
			</c:if>		
			
			<!-- 페이지 처리 -->
			<c:forEach var="i" begin="${startPage}" end="${endPage}">
				<a href="list.do?pageNum=${i}">[${i}]</a> <!-- 페이지 번호를 나열하고 페ㅇ지 블럭을 따로 보냄(가져가신 듯) -->
			</c:forEach>	
			
			<!-- 다음 블럭 -->
			<c:if test="${endPage<pageCount}">
				<a href="list.do?pageNum=${startPage+10}">다음블럭</a>
		 	</c:if>
		</td>
	</tr>
</table>


</body>
